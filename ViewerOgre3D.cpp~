#include "ViewerOgre3D.h"
#include "OGRE/Ogre.h"


#include <iostream>
using namespace std;


void ViewerOgre3D::rotateWorld(double x, double y)
{
  
  Vector3 U =(mCamera->getPosition()- mSceneMgr->getRootSceneNode()->getPosition());
  mSceneMgr->getRootSceneNode()->rotate(mCamera->getOrientation().y,Ogre::Radian(0.<));
}